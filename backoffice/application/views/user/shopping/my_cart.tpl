{include file="user/layout/themes/{$USER_THEME_FOLDER}/header.tpl" name=""}<innerdashes>    <hdash>           <img src="{$PUBLIC_URL}images/1335698592_edit.png" border="0" />        {$tran_View_Cart}        <a href="{$BASE_URL}user/shopping/index">            <div class='shop_btn' >{$tran_Back_to_Product_Categories}</div>         </a>        {if $HELP_STATUS}            <a href="https://infinitemlmsoftware.com/help/feedback" target="_blank"><buttons><img src="{$PUBLIC_URL}images/1359639504_help.png" /></buttons>            </a>        {/if}    </hdash>    <cdash-inner>        <div id="js_error_messages" style="display: none;">            <span id="msg1">{$tran_Sure_you_want_to_remove_this_Product}</span>            <span id="msg2">{$tran_Sure_you_want_to_Check_out}</span>            <span id="msg3">{$tran_Sure_you_want_to_remove_all_items}</span>        </div>        <div id="shoping_cart">            <div id="caption_head" class="caption">                <table align="center" width="95%" cellpadding="0" cellspacing="0">                    <tr>                        <td width="50">                            <div id="icon" class="shoping_cart"></div>                        </td>                        <td width="88%" align="left">                            {$tran_Shopping_Cart}                        </td>                    </tr>                </table>            </div>            <div class="cart_lines dottedborder_bottom">                {$tran_Total_Items} : <span id="items">{$items}</span>            </div>            <div class="cart_lines dottedborder_bottom">                {$tran_Amount} : <span class="orange_link"><a>$ <span id="amount">{number_format($amount, 2)}</span></a></span>            </div>            <div class="cart_lines_btn ">                <table width="208" cellpadding="0" cellspacing="0" >                    <tr>                        <td>                            <a href="{$BASE_URL}user/shopping/my_cart">                                <div class="black_link" style="float:left">                                    {$tran_View_Cart}                                </div>                            </a>                        </td>                    </tr>                </table>                </center>            </div>        </div>        <div class="box_ecommerce_inside">            {form_open('', 'method="post" id="" name=""')}                <input type="hidden" name="base_url" id='base_url' value="{$BASE_URL}">                <table cellpadding="0" cellspacing="0" width="100%" class="ecommerce_table">                    <tr>                        <th width="32%">{$tran_Product}</th>                        <th width="17%">{$tran_Unit_Price}</th>                        <th width="8%">{$tran_Tax}</th>                        <th width="18%">{$tran_Quantity}</th>                        <th width="17%">{$tran_Sub_total}</th>                        <th width="8%">{$tran_Remove}</th>                    </tr>                    {*$products|@print_r*}                     {$pdt_count = count($products)}                    {assign var="i" value=0}                    {assign var="grand_total" value=0}                    {if $pdt_count != 0}                        {foreach from=$products item=v}                            {if $i % 2 == 0}                                {$tr = "tr1"}                            {else}                                {$tr = "tr2"}                            {/if}                            {$pid = {$v.product_id}}                            {$product = {$v.product}}                            {$price = {$v.price}}                            {$tax = {$v.tax}}                            {$thumb = {$v.thumb}}                            {$qty = {$v.qty}}                            {$total_amt = $qty * $price}                            {$total_tax = ($total_amt * $tax) / 100}                            {$sub_total = $total_amt + $total_tax}                            {$grand_total = $grand_total + $sub_total}                            <tr class="{$tr}">                                <td>                            <center>                                <img src="{$image_path}thumbs/{$thumb}" width="60" height="75" />                                <span class="google_font_caption align_cen fnt">{$product}</span>                            </center>                            </td>                            <td>                                <b>{number_format($price, 2)}</b>                            </td>                            <td>                                <b>{number_format($tax, 2)}%</b>                            </td>                            <td>                                <table align="center" >                                    <tr>                                        <td>                                            <input type="hidden" id="pdtid{$i}" value="{$pid}" name="pdtid{$i}" />                                            <input type="input" id="qty{$i}" name="qty{$i}" style="width:80px;text-align:center;" value="{$qty}" class="field" />                                        </td>                                    </tr>                                    <tr>                                        <td>                                            <input type="submit" class="black_btn"  value="{$tran_Update}" name="update_qty{$i}" id="update_qty{$i}"/>                                        </td>                                    </tr>                                    <tr>                                        <td>                                            <img src="{$BASE_URL}/public_html/images/loader.gif" style="display:none" id="loader" name="loader"/>                                        </td>                                    </tr>                                </table>                            </td>                            <td>                                <b>                                    <span id='{$pid}1' name='{$pid}1'>{number_format($sub_total, 2)}</span>                                </b>                            </td>                            <td>                                <a href="javascript:removeProduct({$pid})"><div id="icon" class="remove_icon" title="{$tran_Remove}"  ></div></a>                            </td>                            </tr>                            {$i=$i+1}                        {/foreach}                        <tr>                            <td colspan='4' align='right'>{$tran_Grand_Total}&nbsp; : &nbsp;</td>                            <td>{number_format($grand_total, 2)}</td>                        </tr>                    {else}                        <tr><td colspan='6'><b>{$tran_No_items_found_in_your_cart}</b></td></tr>                                {/if}                </table>            {form_close()}        </div>        <table  width="100%">            <tr>                <td align="right">{if $pdt_count == !0}                    <a href="javascript:removeAll()">                        <div class="black_link" style="float:left">{$tran_Remove_All}</div>                    </a>                    {/if}</td>                    <td>                        <a href="{$BASE_URL}user/shopping/index">                            <div class="red_link" style="float:right">{$tran_Continue_Shopping}</div>                        </a>                    </td>                    <td>                        <a href="javascript:checkout()"><div class="black_link" style="float:right">{$tran_Check_Out}</div></a>                         </td>                </tr>            </table>        </cdash-inner>    </innerdashes>    {include file="user/layout/themes/{$USER_THEME_FOLDER}/footer.tpl" title="Example Smarty Page" name=""}    <script>        jQuery(document).ready(function() {            Main.init();        });    </script>    {include file="user/layout/themes/{$USER_THEME_FOLDER}/page_footer.tpl" title="Example Smarty Page" name=""}